<Page
    x:Class="WeatherSplitview.WeatherOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherSplitview"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Background="White">
            <StackPanel VerticalAlignment="Center">
                <Image x:ConnectionId='2' Name="ResultImage" Width="200" Height="200" HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='3' Name="TempleText" FontSize="53" HorizontalAlignment="Center" Foreground="Black"/>
                <TextBlock x:ConnectionId='4' Name="Description" Foreground="Black" FontSize="35" HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='5' Name="LocationText" FontSize="24" Foreground="Black" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

